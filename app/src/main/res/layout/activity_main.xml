<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="baltamon.mx.tictactoe.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary" />

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:paddingTop="20dp"
        android:rowCount="3">

        <Button
            android:id="@+id/btn_01"
            style="@style/ButtonsStyles"
            android:onClick="onCellClicked"
            android:tag="0,0" />

        <Button
            android:id="@+id/btn_02"
            style="@style/ButtonsStyles"
            android:onClick="onCellClicked"
            android:tag="1,0" />

        <Button
            android:id="@+id/btn_03"
            style="@style/ButtonsStyles"
            android:onClick="onCellClicked"
            android:tag="2,0" />

        <Button
            android:id="@+id/btn_04"
            style="@style/ButtonsStyles"
            android:onClick="onCellClicked"
            android:tag="0,1" />

        <Button
            android:id="@+id/btn_05"
            style="@style/ButtonsStyles"
            android:onClick="onCellClicked"
            android:tag="1,1" />

        <Button
            android:id="@+id/btn_06"
            style="@style/ButtonsStyles"
            android:onClick="onCellClicked"
            android:tag="2,1" />

        <Button
            android:id="@+id/btn_07"
            style="@style/ButtonsStyles"
            android:onClick="onCellClicked"
            android:tag="0,2" />

        <Button
            android:id="@+id/btn_08"
            style="@style/ButtonsStyles"
            android:onClick="onCellClicked"
            android:tag="1,2" />

        <Button
            android:id="@+id/btn_09"
            style="@style/ButtonsStyles"
            android:onClick="onCellClicked"
            android:tag="2,2" />

    </GridLayout>

    <TextView
        android:id="@+id/tv_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Winner"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="cleanMatrix"
        android:text="Clean" />

</LinearLayout>
